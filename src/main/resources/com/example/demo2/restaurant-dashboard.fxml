<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="30" style="-fx-background-color: #fff7ef;" stylesheets="@restaurant-dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.controller.RestaurantDashboardController">

    <!-- ================= NAVBAR ================= -->
    <HBox alignment="CENTER_LEFT" spacing="16" styleClass="navbar">

        <padding>
            <Insets bottom="14" left="24" right="24" top="14" />
        </padding>

        <!-- Title -->
        <Label styleClass="nav-title" text="FoodHub" />

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onLogoutClicked" styleClass="nav-link" text="Logout" />


        <Region prefWidth="8" />

        <!-- Logged-in user -->
        <Label fx:id="loggedInUser" styleClass="nav-user" />

        <Region prefWidth="12" />

        <!-- Restaurant pill (matches UI style) -->
        <Label fx:id="restaurantNameLabel" styleClass="restaurant-pill" text="Pizza Hut" />

        <Label styleClass="nav-role" text="Restaurant" />

    </HBox>


    <!-- ================= HEADER ================= -->
    <VBox spacing="6">
        <padding>
            <Insets left="40" right="40" />
        </padding>

        <Label style="-fx-font-size: 26px;                       -fx-font-weight: bold;" text="Restaurant Dashboard" />

        <Label style="-fx-text-fill: #777;" text="Manage your menu and orders" />
    </VBox>

    <!-- ================= STATS ================= -->
    <HBox spacing="20">
        <padding>
            <Insets left="40" right="40" />
        </padding>

        <VBox spacing="6" style="-fx-background-color: white; -fx-background-radius: 14;">
            <padding><Insets bottom="18" left="20" right="20" top="18" /></padding>
            <Label text="Total Orders" />
            <Label fx:id="totalOrdersLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="1" />
        </VBox>

        <VBox spacing="6" style="-fx-background-color: white; -fx-background-radius: 14;">
            <padding><Insets bottom="18" left="20" right="20" top="18" /></padding>
            <Label text="Revenue" />
            <Label fx:id="revenueLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="45.84" />
        </VBox>

        <VBox spacing="6" style="-fx-background-color: white; -fx-background-radius: 14;">
            <padding><Insets bottom="18" left="20" right="20" top="18" /></padding>
            <Label text="Avg. Rating" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="4.5 â­" />
        </VBox>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets left="40" right="40" top="10" />
        </padding>

        <Label style="-fx-font-size: 18px;                   -fx-font-weight: bold;" text="Orders" />
    </HBox>

    <!-- ================= ORDERS LIST ================= -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
        <content>
            <VBox fx:id="ordersContainer" spacing="12">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" />
            </padding>

                <!-- restaurant-order-card.fxml injected here -->
            </VBox>
        </content>
    </ScrollPane>


    <!-- ================= MENU HEADER ================= -->
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets left="40" right="40" top="10" />
        </padding>

        <Label style="-fx-font-size: 18px;                       -fx-font-weight: bold;" text="Menu Items" />

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onAddItem" style="-fx-background-color: #ff6a00;                        -fx-text-fill: white;                        -fx-background-radius: 12;                        -fx-padding: 6 18;                        -fx-font-weight: bold;" text="+ Add Item" />
    </HBox>

    <!-- ================= MENU LIST ================= -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
        <content>
            <VBox fx:id="menuItemsContainer" spacing="12">
                <padding>
                    <Insets bottom="40" left="40" right="40" />
                </padding>

                <!-- menu-item-card.fxml injected here -->
            </VBox>
        </content>
    </ScrollPane>

</VBox>

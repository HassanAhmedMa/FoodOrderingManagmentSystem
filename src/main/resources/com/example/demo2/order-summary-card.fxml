<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="320" spacing="15"
      style="-fx-background-color: white;
             -fx-background-radius: 15;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10,0,0,4);"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Order Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label text="Delivery Address" style="-fx-font-weight: bold;" />
    <TextField fx:id="addressField" promptText="Enter your address..." />

    <Label text="Payment Method" style="-fx-font-weight: bold;" />

    <HBox spacing="10">
        <Button fx:id="cardButton" text="ðŸ’³ Card" prefWidth="140"
                style="-fx-background-radius:10;-fx-border-radius:10;
                       -fx-border-color:#ff6a00;-fx-text-fill:#ff6a00;"/>
        <Button fx:id="cashButton" text="ðŸ’µ Cash" prefWidth="140"
                style="-fx-background-radius:10;-fx-border-radius:10;
                       -fx-border-color:#ddd;"/>
    </HBox>

    <Label fx:id="subtotalLabel" text="Subtotal 0.00$"/>
    <Label text="Delivery Fee 2.99$"/>
    <Label fx:id="taxLabel" text="Tax 0.00$"/>
    <Label fx:id="totalLabel" text="Total 0.00$" style="-fx-font-weight:bold;"/>

    <Button fx:id="placeOrderButton"
            text="Place Order"
            prefWidth="140"
            style="-fx-background-radius:12;" />
</VBox>

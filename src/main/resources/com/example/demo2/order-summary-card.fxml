<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="320" spacing="15" style="-fx-background-color: white;              -fx-background-radius: 15;              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10,0,0,4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Order Summary" />

    <Label style="-fx-font-weight: bold;" text="Delivery Address" />

    <TextField promptText="Enter your address..." />

    <Label style="-fx-font-weight: bold;" text="Payment Method" />

    <HBox spacing="10">
        <Button prefWidth="140" style="-fx-background-color: #fff;                        -fx-border-color: #ff6a00;                        -fx-text-fill: #ff6a00;                        -fx-font-weight: bold;                        -fx-background-radius: 10;                        -fx-border-radius: 10;" text="ðŸ’³ Card" />

        <Button prefWidth="140" style="-fx-background-color: #fff;                        -fx-border-color: #ddd;                        -fx-background-radius: 10;                        -fx-border-radius: 10;" text="ðŸ’µ Cash" />
    </HBox>

    <!-- Price Breakdown -->
    <VBox spacing="6">
        <HBox>
            <Label text="Subtotal" />
            <Label text="38.95$">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Label>
        </HBox>

        <HBox>
            <Label text="Delivery Fee" />
            <Label text="2.99$">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Label>
        </HBox>

        <HBox>
            <Label text="Tax" />
            <Label text="3.90$">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Label>
        </HBox>
    </VBox>

    <HBox>
        <Label style="-fx-font-weight: bold;" text="Total" />
        <Label style="-fx-font-weight: bold;" text="45.84$">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></Label>
    </HBox>

    <Button prefHeight="16.0" prefWidth="82.0" style="-fx-background-color: #ff6a00;                    -fx-text-fill: white;                    -fx-font-weight: bold;                    -fx-background-radius: 12;" text="Place Order" />

</VBox>

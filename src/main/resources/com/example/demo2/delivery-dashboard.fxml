<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="24"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="model.controller.DeliveryController"
      style="-fx-background-color: #fff7ef;">

    <!-- ================= NAV BAR ================= -->
    <HBox spacing="20"
          alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-border-color: #eee;">
        <padding>
            <Insets top="14" right="30" bottom="14" left="30"/>
        </padding>

        <Label text="ðŸšš FoodHub"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Delivery Dashboard"
               style="-fx-font-weight: bold;" />

        <Region prefWidth="20"/>

        <Label text="Delivery Staff"
               style="-fx-text-fill: #ff6a00;
                      -fx-font-size: 11px;" />
    </HBox>

    <!-- ================= HEADER ================= -->
    <VBox spacing="6">
        <padding>
            <Insets left="40" right="40"/>
        </padding>

        <Label text="My Deliveries"
               style="-fx-font-size: 26px;
                      -fx-font-weight: bold;" />

        <Label text="Orders assigned to you"
               style="-fx-text-fill: #777;" />
    </VBox>

    <!-- ================= ORDERS LIST ================= -->
    <ScrollPane fitToWidth="true"
                vbarPolicy="AS_NEEDED"
                hbarPolicy="NEVER"
                style="-fx-background-color: transparent;">
        <content>
            <VBox fx:id="ordersContainer"
                  spacing="12">
                <padding>
                    <Insets left="40" right="40" bottom="40"/>
                </padding>

                <!-- delivery-order-card.fxml injected here -->
            </VBox>
        </content>
    </ScrollPane>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="24" style="-fx-background-color: #fff7ef;" stylesheets="@delivery-dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.controller.DeliveryController">

    <!-- ================= NAVBAR ================= -->
    <HBox alignment="CENTER_LEFT" spacing="16" styleClass="navbar">

        <padding>
            <Insets bottom="14" left="24" right="24" top="14" />
        </padding>

        <!-- Title -->
        <Label styleClass="nav-title" text="FoodHub" />

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Logout -->
        <Button onAction="#onLogoutClicked" styleClass="nav-link" text="Logout" />

        <Region prefWidth="8" />

        <!-- Logged-in user -->
        <Label fx:id="loggedInUser" styleClass="nav-user" />

        <Region prefWidth="12" />

        <!-- Role pill (same style as restaurant pill) -->
        <Label styleClass="restaurant-pill" text="Delivery" />

    </HBox>


    <!-- ================= HEADER ================= -->
    <VBox spacing="6">
        <padding>
            <Insets left="40" right="40" />
        </padding>

        <Label style="-fx-font-size: 26px;                       -fx-font-weight: bold;" text="My Deliveries" />

        <Label style="-fx-text-fill: #777;" text="Orders assigned to you" />
    </VBox>

    <!-- ================= ORDERS LIST ================= -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
        <content>
            <VBox fx:id="ordersContainer" spacing="12">
                <padding>
                    <Insets bottom="40" left="40" right="40" />
                </padding>

                <!-- delivery-order-card.fxml injected here -->
            </VBox>
        </content>
    </ScrollPane>

</VBox>

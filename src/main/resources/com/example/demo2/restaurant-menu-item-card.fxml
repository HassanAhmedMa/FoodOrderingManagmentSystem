<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<HBox spacing="14"
      alignment="CENTER_LEFT"
      style="-fx-background-color: white;
             -fx-background-radius: 14;
             -fx-padding: 12;
             -fx-border-color: #eee;
             -fx-border-radius: 14;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="model.controller.RestaurantMenuItemCardController">

    <!-- Image -->
    <ImageView fx:id="itemImage"
               fitWidth="48"
               fitHeight="48"
               style="-fx-background-radius: 10;" />

    <!-- Name + Description -->
    <VBox spacing="4">
        <Label fx:id="nameLabel"
               style="-fx-font-weight: bold;" />

        <Label fx:id="descLabel"
               wrapText="true"
               maxWidth="220"
               style="-fx-text-fill: #777;
                      -fx-font-size: 11;" />
    </VBox>

    <Region HBox.hgrow="ALWAYS"/>

    <!-- Price + Status -->
    <VBox spacing="2" alignment="CENTER_RIGHT">
        <Label fx:id="priceLabel"
               style="-fx-font-weight: bold;" />

        <Label fx:id="statusLabel"
               style="-fx-text-fill: #22c55e;
                      -fx-font-size: 11;" />
    </VBox>

    <!-- ACTION BUTTONS -->
    <VBox spacing="6" alignment="CENTER">
        <Button text="Edit"
                onAction="#onEdit"
                style="-fx-background-color: #fff;
                       -fx-border-color: #ff6a00;
                       -fx-text-fill: #ff6a00;
                       -fx-font-size: 11;
                       -fx-background-radius: 8;
                       -fx-border-radius: 8;"
                prefWidth="60"/>

        <Button text="Delete"
                onAction="#onDelete"
                style="-fx-background-color: #fee2e2;
                       -fx-text-fill: #dc2626;
                       -fx-font-size: 11;
                       -fx-background-radius: 8;"
                prefWidth="60"/>
    </VBox>

</HBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="18"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-background-color: white;
             -fx-background-radius: 16;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,4);">

    <padding>
        <Insets top="18" right="22" bottom="22" left="22"/>
    </padding>

    <!-- ================= HEADER ================= -->
    <HBox spacing="14">

        <Label text="ðŸ“¦"
               style="-fx-background-color: #FFE5D1;
                      -fx-padding: 8;
                      -fx-background-radius: 10;" />

        <VBox spacing="3">
            <Label text="Pizza Heaven"
                   style="-fx-font-weight: bold;" />

            <Label text="12/16/2025 â€¢ 2 items"
                   style="-fx-text-fill: #777; -fx-font-size: 11px;" />
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Order Placed"
               style="-fx-text-fill: #ff6a00;
                      -fx-background-color: #FFF0E6;
                      -fx-padding: 6 14;
                      -fx-background-radius: 20;
                      -fx-font-size: 11px;" />

        <Label text="âŒ„"
               style="-fx-text-fill: #777; -fx-font-size: 16px;" />
    </HBox>

    <Separator />

    <!-- ================= ORDER PROGRESS ================= -->
    <VBox spacing="10">
        <Label text="Order Progress"
               style="-fx-font-weight: bold;" />

        <HBox spacing="70" alignment="CENTER_LEFT">

            <!-- Placed -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="1"
                       style="-fx-background-color: #ff6a00;
                          -fx-text-fill: white;
                          -fx-padding: 6;
                          -fx-background-radius: 50;" />
                <Label text="Placed"
                       style="-fx-font-size: 10px;" />
            </VBox>

            <!-- Preparing -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="2"
                       style="-fx-background-color: #eee;
                          -fx-padding: 6;
                          -fx-background-radius: 50;" />
                <Label text="Preparing"
                       style="-fx-font-size: 10px;
                          -fx-text-fill: #777;" />
            </VBox>

            <!-- Delivered -->
            <VBox alignment="CENTER" spacing="4">
                <Label text="3"
                       style="-fx-background-color: #eee;
                          -fx-padding: 6;
                          -fx-background-radius: 50;" />
                <Label text="Delivered"
                       style="-fx-font-size: 10px;
                          -fx-text-fill: #777;" />
            </VBox>

        </HBox>

        <Button text="Simulate Next Status (Demo)"
                style="-fx-background-color: transparent;
                   -fx-border-color: #ff6a00;
                   -fx-text-fill: #ff6a00;
                   -fx-background-radius: 8;
                   -fx-border-radius: 8;" />
    </VBox>


    <!-- ================= ITEMS ================= -->
    <VBox spacing="12">
        <Label text="Items" style="-fx-font-weight: bold;" />

        <HBox spacing="12">
            <ImageView fitWidth="40" fitHeight="40" preserveRatio="true"/>
            <VBox spacing="2">
                <Label text="Margherita Pizza"/>
                <Label text="Qty: 1"
                       style="-fx-text-fill: #777; -fx-font-size: 11px;" />
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="14.99" style="-fx-font-weight: bold;" />
        </HBox>

        <HBox spacing="12">
            <ImageView fitWidth="40" fitHeight="40" preserveRatio="true"/>
            <VBox spacing="2">
                <Label text="Garlic Bread"/>
                <Label text="Qty: 4"
                       style="-fx-text-fill: #777; -fx-font-size: 11px;" />
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="23.96" style="-fx-font-weight: bold;" />
        </HBox>
    </VBox>

    <Separator />

    <!-- ================= INFO ================= -->
    <HBox>
        <Label text="Delivery Address" style="-fx-text-fill: #777;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="21 Moqawloon Arab" />
    </HBox>

    <HBox>
        <Label text="Payment Method" style="-fx-text-fill: #777;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Cash" />
    </HBox>

    <!-- ================= TOTAL ================= -->
    <HBox>
        <Label text="Total" style="-fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="45.84"
               style="-fx-font-weight: bold;
                      -fx-text-fill: #ff6a00;" />
    </HBox>

</VBox>

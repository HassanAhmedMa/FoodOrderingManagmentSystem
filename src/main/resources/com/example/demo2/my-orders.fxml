<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25" style="-fx-background-color: #FFF8F2;" stylesheets="@my-orders.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.controller.MyOrdersController">

    <!-- ================= NAV BAR ================= -->
    <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="14">
        <padding>
            <Insets top="12" right="18" bottom="12" left="18"/>
        </padding>

        <!-- Home title (same logic) -->
        <Label text="FoodHub"
               styleClass="nav-title"
               onMouseClicked="#goToHome"/>

        <Region HBox.hgrow="ALWAYS"/>


        <Region prefWidth="10"/>

        <!-- keep SAME fx:id -->
        <Label fx:id="loggedInUser"
               styleClass="nav-user"/>

        <Label text="Customer"
               styleClass="nav-role"/>
    </HBox>


    <!-- ================= PAGE TITLE ================= -->
    <VBox spacing="6">
        <padding>
            <Insets left="40" right="40" top="10" />
        </padding>

        <Label style="-fx-font-size: 26px;                       -fx-font-weight: bold;" text="My Orders" />
    </VBox>

    <!-- ================= ORDERS LIST ================= -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">

        <content>
            <VBox fx:id="ordersContainer" spacing="18">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="10" />
                </padding>

                <!-- ================= ORDER CARD ================= -->
                <!-- THIS IS YOUR order-item.fxml -->
                <!-- It will expand to order-details-card.fxml -->


                <!-- duplicate later dynamically -->
                <!-- <fx:include source="order-item.fxml"/> -->

            </VBox>
        </content>
    </ScrollPane>

</VBox>

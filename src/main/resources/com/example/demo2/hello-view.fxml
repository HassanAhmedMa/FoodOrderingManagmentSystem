<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="model.controller.HomePageController"
            stylesheets="@home-page.css">
    <VBox spacing="40" style="-fx-background-color: #FFF8F2;">

        <!-- ================= NAVBAR ================= -->
        <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="14" right="24" bottom="14" left="24"/>
            </padding>

            <!-- Title -->
            <Label onMouseClicked="#goToHome" text="FoodHub" styleClass="nav-title"/>

            <!-- spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- keep SAME logic (same onAction methods) -->
            <Button text="Browse"
                    styleClass="nav-link"
                    onAction="#onBrowseClicked"/>
            <Button text="Logout"
                    styleClass="nav-link"
                    onAction="#onLogoutClicked"/>

            <Button text="My Orders"
                    styleClass="nav-link"
                    onAction="#goToOrders"/>

            <Region prefWidth="8"/>
            <!-- keep SAME fx:id -->
            <Label fx:id="loggedInUser"
                   styleClass="nav-user"/>

            <Region prefWidth="12"/>
            <StackPane alignment="CENTER_RIGHT" styleClass="cart-wrap">
                <Button text="ðŸ›’"
                        styleClass="cart-btn"
                        onAction="#handleCart"/>

                <Label fx:id="cartBadge"
                       text="0"
                       visible="false"
                       styleClass="cart-badge"/>
            </StackPane>
        </HBox>


        <!-- ================= HERO SECTION ================= -->
        <StackPane prefHeight="420" style="-fx-background-color: linear-gradient(to right, #4a1f0f, #ff7a18);">

            <VBox alignment="CENTER_LEFT" maxWidth="600" spacing="15">
                <padding>
                    <Insets bottom="60" left="60" right="60" top="60" />
                </padding>

                <Label style="-fx-text-fill: white;                               -fx-font-size: 42px;                               -fx-font-weight: bold;" text="Delicious Food," />

                <Label style="-fx-text-fill: #ff8c42;                               -fx-font-size: 42px;                               -fx-font-weight: bold;" text="Delivered Fast" />

                <Label style="-fx-text-fill: white; -fx-font-size: 15;" text="Order from your favorite restaurants and track your delivery in real-time." wrapText="true" />

                <HBox spacing="10">
                    <TextField prefWidth="300" promptText="Enter your delivery address..." />
                    <Button onAction="#onBrowseClicked" prefWidth="120" style="-fx-background-color: #ff6a00;                                    -fx-text-fill: white;                                    -fx-font-weight: bold;" text="Find Food" />
                </HBox>


                <HBox spacing="30">
                    <padding>
                        <Insets top="20" />
                    </padding>
                    <Label style="-fx-text-fill: white;" text="â­ 4.8 Rating&#10;10k+ Reviews" />
                    <Label style="-fx-text-fill: white;" text="â± 25 min&#10;Avg. Delivery" />
                    <Label style="-fx-text-fill: white;" text="âœ” 100%&#10;Safe Delivery" />
                </HBox>

            </VBox>
        </StackPane>

        <!-- ================= POPULAR RESTAURANTS ================= -->
        <VBox spacing="20">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <HBox alignment="CENTER_LEFT">
                <VBox>
                    <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Popular Restaurants" />
                    <Label style="-fx-text-fill: #777;" text="Top rated restaurants in your area" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#onBrowseClicked" style="-fx-background-color: transparent;                                -fx-text-fill: #ff6a00;                                -fx-font-weight: bold;" text="View All â†’" />
            </HBox>

            <!-- ðŸ”¥ DYNAMIC RESTAURANT CARDS (FROM DATABASE) -->
            <HBox fx:id="popularRestaurantsBox" spacing="20" />
        </VBox>

        <!-- ================= CTA ================= -->
        <StackPane prefHeight="300" style="-fx-background-color: linear-gradient(to right, #ff6a00, #ee0979);">

            <VBox alignment="CENTER" spacing="15">
                <Label style="-fx-text-fill: white;                               -fx-font-size: 36px;                               -fx-font-weight: bold;" text="Ready to Order?" />

                <Label maxWidth="500" style="-fx-text-fill: white;                               -fx-font-size: 15;                               -fx-alignment: center;" text="Join thousands of happy customers and get your favorite food delivered today." wrapText="true" />

                <Button onAction="#onBrowseClicked" prefHeight="45" prefWidth="220" style="-fx-background-color: #fff2e6;                                -fx-text-fill: #ff6a00;                                -fx-font-size: 14;                                -fx-font-weight: bold;                                -fx-background-radius: 25;" text="Start Ordering Now â†’" />
            </VBox>
        </StackPane>

        <Region prefHeight="50" />
    </VBox>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<TitledPane collapsible="true" expanded="false" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- ===== HEADER (always visible) ===== -->
    <graphic>
        <HBox spacing="10">
            <ImageView fitHeight="30" fitWidth="30" />
            <VBox>
                <Label style="-fx-font-weight: bold;" text="Pizza Heaven" />
                <Label style="-fx-text-fill: #777;" text="12/16/2025 Â· 2 items" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label prefHeight="17.0" prefWidth="192.0" style="-fx-text-fill: #ff6a00;" text="Confirmed" />
        </HBox>
    </graphic>

    <!-- ===== DROPDOWN CONTENT ===== -->
    <content>
        <VBox spacing="20">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label text="Order Progress" />

            <HBox spacing="20">
                <Label text="Placed" />
                <Label text="Confirmed" />
                <Label text="Preparing" />
                <Label text="Out for delivery" />
                <Label text="Delivered" />
            </HBox>

            <Separator />

            <Label text="Items" />

            <HBox spacing="10">
                <Label text="Margherita Pizza" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="14.99$" />
            </HBox>

            <HBox spacing="10">
                <Label text="Garlic Bread" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="23.96$" />
            </HBox>

            <Separator />

            <HBox>
                <Label style="-fx-font-weight: bold;" text="Total" />
                <Region HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #ff6a00; -fx-font-weight: bold;" text="45.84$" />
            </HBox>

        </VBox>
    </content>

</TitledPane>

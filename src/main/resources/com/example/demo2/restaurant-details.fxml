<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo2.RestaurantDetailsController">

    <VBox spacing="30" style="-fx-background-color: #FFF8F2;">

        <!-- TOP BAR -->
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: white;">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <Button text="Back"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="FoodHub"
                   style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Sign In"/>
            <Button text="Sign Up"
                    style="-fx-background-color: #ff6a00; -fx-text-fill: white;"/>
        </HBox>

        <!-- HERO IMAGE -->
        <StackPane prefHeight="260">
            <ImageView fx:id="coverImage"
                       fitHeight="260"
                       preserveRatio="true"/>
        </StackPane>

        <!-- RESTAURANT INFO -->
        <VBox spacing="12"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15,0,0,5);">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <HBox alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label fx:id="restaurantName"
                           text="Pizza Heaven"
                           style="-fx-font-size: 22; -fx-font-weight: bold;"/>

                    <Label fx:id="restaurantDesc"
                           text="Authentic Italian pizzas made with love"
                           style="-fx-text-fill: #777;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="ratingLabel"
                       text="***** 4.8 (456 reviews)"
                       style="-fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Italian"
                       style="-fx-background-color: #FFE5D1; -fx-padding: 5 10; -fx-background-radius: 15;"/>
                <Label text="Pizza"
                       style="-fx-background-color: #FFE5D1; -fx-padding: 5 10; -fx-background-radius: 15;"/>
            </HBox>

            <Separator/>

            <HBox spacing="30">
                <Label text="Time: 30-40 min"/>
                <Label text="Location: Midtown"/>
                <Label text="Phone: +1 (555) 123-4567"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="1.99$ delivery"
                       style="-fx-text-fill: #ff6a00; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>

        <!-- MENU -->
        <HBox spacing="30">
            <padding>
                <Insets top="10" right="40" bottom="10" left="40"/>
            </padding>

            <VBox spacing="10" prefWidth="180"
                  style="-fx-background-color: white;
                         -fx-background-radius: 12;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="Categories"
                       style="-fx-font-weight: bold;"/>

                <Button text="All"
                        style="-fx-background-color: #ff6a00; -fx-text-fill: white;"/>
                <Button text="Pizza"/>
                <Button text="Sides"/>
            </VBox>

            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <Label text="Menu"
                       style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- REVIEWS -->
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Reviews (0)"
                   style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Label text="No reviews yet. Be the first to review!"
                   style="-fx-background-color: white;
                          -fx-padding: 20;
                          -fx-background-radius: 12;
                          -fx-text-fill: #777;"/>
        </VBox>

    </VBox>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@cart-page.css"
            fx:controller="model.controller.CartController">

    <VBox spacing="30" style="-fx-background-color: #FFF8F2;">

        <!-- NAVBAR -->
        <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="14">
            <padding>
                <Insets top="12" right="18" bottom="12" left="18"/>
            </padding>

            <!-- ðŸ”¥ BACK BUTTON (same fx:id + same onAction) -->
            <Button fx:id="backButton"
                    text="Back"
                    styleClass="nav-back"
                    onAction="#handleBack"/>

            <Label onMouseClicked="#goToHome" text="FoodHub" styleClass="nav-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="loggedInUser"
                   styleClass="nav-user"/>
        </HBox>


        <!-- CONTENT -->
        <HBox spacing="40">
            <padding>
                <Insets left="40" right="40" bottom="40"/>
            </padding>

            <!-- LEFT CART -->
            <VBox spacing="20" prefWidth="600">
                <Label text="Your Cart"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;" />

                <!-- CART ITEMS -->
                <VBox fx:id="cartItemsBox" spacing="15"/>

                <Button fx:id="clearCartButton"
                        text="Clear Cart"
                        style="-fx-background-color: transparent; -fx-text-fill: red;" />
            </VBox>

            <!-- RIGHT SUMMARY -->
            <fx:include fx:id="orderSummary"
                        source="order-summary-card.fxml"/>
        </HBox>

        <Region prefHeight="40"/>
    </VBox>
</ScrollPane>

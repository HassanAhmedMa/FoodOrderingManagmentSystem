<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="model.controller.CartController">

    <VBox spacing="30"
          style="-fx-background-color: #FFF8F2;">

        <!-- NAVBAR -->
        <HBox spacing="20"
              style="-fx-background-color: white;
                     -fx-border-color: #eee;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Label text="ðŸ´ FoodHub"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Browse"
                    style="-fx-background-color: transparent;" />

            <Label text="hassan"
                   style="-fx-background-color: #FFE5D1;
                          -fx-padding: 6 12;
                          -fx-background-radius: 20;" />
        </HBox>

        <!-- CONTENT -->
        <HBox spacing="40">
            <padding>
                <Insets top="0" right="40" bottom="40" left="40"/>
            </padding>

            <!-- LEFT CART -->
            <VBox spacing="20" prefWidth="600">

                <Label text="Your Cart"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;" />

                <!-- Cart Items -->
                <fx:include source="cart-item-card.fxml"/>
                <fx:include source="cart-item-card.fxml"/>

                <Button text="Clear Cart"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: red;" />
            </VBox>

            <!-- RIGHT SUMMARY -->
            <fx:include source="order-summary-card.fxml"/>

        </HBox>

        <Region prefHeight="40"/>
    </VBox>
</ScrollPane>

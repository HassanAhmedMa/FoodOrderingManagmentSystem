<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefWidth="380" spacing="15" style="-fx-background-color: white;              -fx-background-radius: 12;              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10,0,0,4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <ImageView fx:id="itemImage" fitHeight="70" fitWidth="70" preserveRatio="true" />

    <VBox spacing="6" HBox.hgrow="ALWAYS">
        <Label fx:id="itemName" style="-fx-font-weight: bold;" text="Margerita" />

        <Label fx:id="itemDescription" style="-fx-text-fill: #777;" text="Pizza with margerita and vegies" />

        <Label fx:id="itemPrice" style="-fx-text-fill: #ff6a00;                       -fx-font-weight: bold;" text="11.99" />
    </VBox>

    <Button style="-fx-background-color: #ff6a00;                    -fx-text-fill: white;                    -fx-background-radius: 20;" text="+ Add">
        <padding>
            <Insets bottom="8" left="16" right="16" top="8" />
        </padding>
      <HBox.margin>
         <Insets top="30.0" />
      </HBox.margin>
    </Button>

</HBox>

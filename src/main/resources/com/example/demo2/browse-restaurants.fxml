<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20"
      stylesheets="@browse-restaurants.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="model.controller.BrowseRestaurantController">

    <!-- ================= TOP NAV BAR ================= -->
    <HBox alignment="CENTER_LEFT"
          spacing="20"
          styleClass="navbar">

        <padding>
            <Insets bottom="15" left="20" right="20" top="15"/>
        </padding>

        <Label onMouseClicked="#goToHome" text="FoodHub"
               styleClass="nav-title"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Back"
               onMouseClicked="#handleBack"
               styleClass="nav-back"/>
    </HBox>


    <!-- ================= PAGE HEADER ================= -->
    <VBox alignment="CENTER"
          spacing="6"
          styleClass="page-hero">

        <Label text="Browse Restaurants"
               styleClass="page-hero-title"/>

        <Label text="Find your favorite food from restaurants"
               styleClass="page-hero-subtitle"/>

    </VBox>

    <!-- ================= SEARCH & FILTER ================= -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <padding>
            <Insets bottom="0" left="30" right="30" top="0" />
        </padding>

        <TextField fx:id="searchField" promptText="Search restaurants or cuisines..." style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />

        <ComboBox fx:id="sortCombo" prefWidth="150" promptText="Top Rated" />
    </HBox>

    <!-- ================= CATEGORY FILTERS ================= -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <padding>
            <Insets bottom="0" left="30" right="30" top="10" />
        </padding>


        <Region HBox.hgrow="ALWAYS" />

    </HBox>

    <!-- ================= RESULT COUNT ================= -->
    <Label fx:id="resultCountLabel" style="-fx-text-fill: #777;" text="Showing restaurants">
        <padding>
            <Insets bottom="0" left="30" right="30" top="0" />
        </padding>
    </Label>

    <!-- ================= RESTAURANT GRID ================= -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

        <content>
            <FlowPane fx:id="restaurantContainer" hgap="20" prefWrapLength="900" vgap="20">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="20" />
                </padding>
            </FlowPane>
        </content>

    </ScrollPane>

</VBox>

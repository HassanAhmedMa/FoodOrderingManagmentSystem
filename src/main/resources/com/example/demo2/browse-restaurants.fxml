<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20"
      style="-fx-background-color: #fffaf6;">

    <!-- ================= TOP NAV BAR ================= -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-border-color: #eee;">

        <padding>
            <Insets top="15" right="20" bottom="15" left="20"/>
        </padding>

        <Label text="FoodHub"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Browse"/>
        <Button text="Sign In" style="-fx-background-color: transparent;"/>
        <Button text="Sign Up"
                style="-fx-background-color: #ff6a00; -fx-text-fill: white; -fx-background-radius: 20;"/>
    </HBox>

    <!-- ================= PAGE HEADER ================= -->
    <VBox spacing="5">
        <padding>
            <Insets top="20" right="30" bottom="0" left="30"/>
        </padding>

        <Label text="Browse Restaurants"
               style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
        <Label text="Find your favorite food from restaurants"
               style="-fx-text-fill: #777;"/>
    </VBox>

    <!-- ================= SEARCH & FILTER ================= -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <padding>
            <Insets top="0" right="30" bottom="0" left="30"/>
        </padding>

        <TextField fx:id="searchField"
                   promptText="Search restaurants or cuisines..."
                   HBox.hgrow="ALWAYS"
                   style="-fx-background-radius: 20;"/>

        <ComboBox fx:id="sortCombo"
                  promptText="Top Rated"
                  prefWidth="150"/>
    </HBox>

    <!-- ================= CATEGORY FILTERS ================= -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" right="30" bottom="0" left="30"/>
        </padding>

        <ToggleButton text="All" selected="true"/>
        <ToggleButton text="American"/>
        <ToggleButton text="Italian"/>
        <ToggleButton text="Japanese"/>
        <ToggleButton text="Mexican"/>
        <ToggleButton text="Indian"/>
        <ToggleButton text="Chinese"/>
        <ToggleButton text="Asian"/>

        <Region HBox.hgrow="ALWAYS"/>

        <CheckBox fx:id="openNowCheck" text="Open now"/>
    </HBox>

    <!-- ================= RESULT COUNT ================= -->
    <Label fx:id="resultCountLabel"
           text="Showing restaurants"
           style="-fx-text-fill: #777;">
        <padding>
            <Insets top="0" right="30" bottom="0" left="30"/>
        </padding>
    </Label>

    <!-- ================= RESTAURANT GRID ================= -->
    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED">

        <content>
            <FlowPane fx:id="restaurantContainer"
                      hgap="20"
                      vgap="20"
                      prefWrapLength="900">
                <padding>
                    <Insets top="20" right="30" bottom="30" left="30"/>
                </padding>
            </FlowPane>
        </content>

    </ScrollPane>

</VBox>
